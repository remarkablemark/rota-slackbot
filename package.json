    "eslint": "^8.17.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
